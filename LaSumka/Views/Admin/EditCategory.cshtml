@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Views/Shared/Admin.cshtml";
}
@model LaSumka.Models.Categories

<form asp-antiforgery="true" asp-action="EditCategory" asp-controller="Admin">
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label class="text-info" asp-for="Name"></label><br />
                        <input type="text" asp-for="Name" value="@ViewBag.Category.Name" class="form-control" />
                        <input type="hidden" asp-for="Id" value="@ViewBag.Category.Id" class="form-control" />
                        <span asp-validation-for="Name"></span>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit"  class="btn btn-warning loginButton" value="Змінити категорію" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}